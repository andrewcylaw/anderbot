<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Individual command bean definitions -->
    <bean id="sampleCommand" class="com.anderbot.bot.command.SampleCommand">
        <constructor-arg type="java.lang.String" value="test"/>
    </bean>

    <!-- Register all commands that are available -->
    <bean id="commandHandler" class="com.anderbot.bot.CommandHandler">
        <constructor-arg>
            <list>
                <ref bean="sampleCommand"/>
            </list>
        </constructor-arg>
    </bean>


</beans>